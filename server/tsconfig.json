{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015",
    "outDir": "build",
    "rootDir": "src",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
